<% include ../header%>

<div class="container">
    <div class="ui two column centered grid">

        <div class="left floated  twelve wide column">
            <div class="ui segment">
                <h2 style="margin-top:0">
                    <%= topic.title %>
                </h2>
                <div class="topic">
                    發佈於<%= moment(topic.created_at).fromNow() %>  • 
                    作者: <%= topic.user.name %>  •
                    <%= topic.pv %> 次瀏覽  •
                    <%= topic.comment %> 個回覆  • 
                    <%= topic.tab %>
                </div>
                <div class="ui divider"></div>
                <div class="content">
                    <%- topic.content %>
                </div>
            </div>
            <% include comment%>

        </div>
    </div>
</div>

<% include ../footer%>