<% include ../header%>

<div class="container">
    <div class="ui two column centered grid">
        <div class="left floated twelve wide column">
            <form method="post">
                <div class="ui form segment">
                    <h2 style="margin-top:0">發布新貼文</h2>
                    <div class="field">
                        <div class="fields">
                            <div class="field required">
                                <label>主題</label>
                                <div class="ui selection dropdown">
                                    <input type="hidden" name="tab">
                                    <div class="default text">主題</div>
                                    <i class="dropdown icon"></i>
                                    <div class="menu">
                                        <% tabs.slice(1).forEach(function (tab) { %>
                                        <div class="item" data-value="<%= tab %>">
                                            <%= tab %>
                                        </div>
                                        <% }) %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="field required">
                        <label>標題</label>
                        <input placeholder="打甚麼都可以" type="text" name="title">
                    </div>
                    <div class="field required">
                        <label>內容</label>
                        <textarea name="content"></textarea>
                    </div>
                    <input type="submit" class="ui button" value="發布">
                </div>
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">
    $('.ui.dropdown').dropdown();
</script>

<% include ../footer%>