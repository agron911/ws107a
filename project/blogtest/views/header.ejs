<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>blog</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.12.0/semantic.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <script src="/js/jquery-1.11.2.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.12.0/semantic.min.js"></script>
</head>
<body>
<div class="ui fixed menu navbar">
    <div class="container">
        <a href="/" class="item">首頁</a>
        <form class="form-inline offset-md-3" action='' method='post'>
            <input class="form-control mr-sm-2" type="search" name='search' placeholder="Search" aria-label="Search">
            <button class="btn btn-success my-2 my-sm-0" type="submit">Search</button>
          </form>
        <div class="right menu">
            <% if(session.user) { %>
            <img src="/images/<%= session.user.name %>.jpg" style="width:50px;height:50px">
                <a href="/users/update" class="item" >修改大頭貼</a>
                <a href="/users/logout" class="item">登出</a>
            <%}else{%>
                <img src="/0.jpg" style="width:50px;height:50px">
            <a href="/users/signup" class="item">註冊</a>
            <a href="/users/login" class="item">登入</a>
            <%}%>
        </div>
    </div>
</div>


<% if (flash && flash.success) { %>
<div class="flash">
    <div class="ui green message"><i class="close icon"></i><%= flash.success %></div>
</div>
<% } %>
<% if (flash && flash.error) { %>
<div class="flash">
    <div class="ui red message"><i class="close icon"></i><%= flash.error %></div>
</div>
<% } %>

<script type="text/javascript">
    $('.message .close').on('click', function() {
        $(this).closest('.message').fadeOut();
    });
</script>
